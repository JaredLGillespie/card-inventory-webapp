<div class="container" style="padding-top: 10px;">
    <div class="card">
        <div class="card-header">
            <h2>Login</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <h4 class="card-text">
                        <div class="row">
                            <div class="col-6">
                                Username:
                            </div>
                            <div class="col-6">
                                {{input value=username}}
                            </div>
                        </div>
                    </h4>
                    <h4 class="card-text">
                        <div class="row">
                            <div class="col-6">
                                Password:
                            </div>
                            <div class="col-6">
                                {{input type="password" value=password}}
                            </div>
                        </div>
                    </h4>
                </div>
                <div class="col-6">
                    <div class="row">
                        <div class="col-3">
                            <button class="btn btn-primary" style="margin-top: 17px;">Login</button>
                        </div>
                        <div class="col-9">
                            <p class="float-right" style="margin-top: 17px;">Don't have an account? {{#link-to 'user.new' class="btn btn-success"}}Create Account{{/link-to}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
